#!/bin/sh

function saveGCloudJsonKey() {
  if [ -f "/opt/resource/json_key.json" ]
  then
    pwd
    set +x
    echo "${1}" > "/opt/resource/json_key.json"
    if [ $DEBUG == "true" ]; then
      set -x
    fi
  fi
}

function activateGCloudAccount() {
  gcloud auth activate-service-account --key-file /opt/resource/json_key.json
}
